{
  "ReverseProxy": {
    "Routes": {
      "orders-route": {
        "ClusterId": "orders-cluster",
        "Match": {
          "Path": "/api/orders/{**catch-all}"
        }
      },
      "products-route": {
        "ClusterId": "products-cluster",
        "Match": {
          "Path": "/api/products/{**catch-all}"
        }
      },
      "shipment-route": {
        "ClusterId": "shipment-cluster",
        "Match": {
          "Path": "/api/shipment/{**catch-all}"
        }
      },
      "cart-route": {
        "ClusterId": "cart-cluster",
        "Match": {
          "Path": "/api/cart/{**catch-all}"
        }
      }
    },

    "Clusters": {
      "orders-cluster": {
        "Destinations": {
          "orders-service": {
            "Address": "http://localhost:5001/"
          }
        }
      },
      "products-cluster": {
        "Destinations": {
          "products-service": {
            "Address": "http://localhost:5002/"
          }
        }
      },
      "shipment-cluster": {
        "Destinations": {
          "shipment-service": {
            "Address": "http://localhost:5003/"
          }
        }
      },
      "cart-cluster": {
        "Destinations": {
          "cart-service": {
            "Address": "http://localhost:5004/"
          }
        }
      }
    }
  }
}